<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ridesharing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.HomePage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ShowCars"
            android:parentActivityName=".Activity.HomePage" />
        <activity
            android:name=".Activity.QRReader"
            android:parentActivityName=".Activity.HomePage" />
        <activity
            android:name=".Activity.YourTrips"
            android:parentActivityName=".Activity.HomePage" />

        <activity android:name=".Activity.SingleTrip"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activity.CaptureActivityPortrait"></activity>
    </application>

</manifest>